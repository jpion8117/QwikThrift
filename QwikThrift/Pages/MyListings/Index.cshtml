@page
@model IndexModel
@{
    ViewData["Title"] = "My Listings";
}
<h1>My Listings</h1>
<div class="row">
    <div class="col-md-8 data-view">
        <div class="container-fluid">
            @if (Model.Listings != null && Model.Listings.Any())
            {
                @foreach (var listing in Model.Listings)
                {
                    <div class="listing">
                        <div class="row">
                            <div class="form-group col-4">
                                <img class="col-12" src="@(listing.Images.Count > 0 ? listing.Images[0].FullPath : "")" alt="Listing Image" />
                            </div>
                            <div class="form-group col-8">
                                <label>Title:</label>
                                <p>@listing.Title</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-4">
                                <label>Price:</label>
                                <p>@listing.Price.ToString("C")</p>
                            </div>
                            <div class="form-group col-8">
                                <label>Category:</label>
                                <p>@listing.Category.CategoryName</p>
                            </div>
                        </div>
                        
                        <div class="text-center" style="padding-top:15px;">
                            <a class="btn btn-primary" asp-page="/MyListings/Details" asp-route-id="@listing.ListingId">
                                Details
                            </a>
                        </div>
                    </div>
                    <hr />
                }
            }
            else
            {
                <p>You have no listings.</p>
            }
        </div>
    </div>
    <div class="col-md-4 text-center">
        <a class="btn btn-primary" asp-page="/MyListings/Create">
            Create New Listing
        </a>
    </div>
</div>
