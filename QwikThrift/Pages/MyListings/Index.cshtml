@page
@model IndexModel
@{
    ViewData["Title"] = "My Listings";
}
<h1>My Listings</h1>
<div class="row">
    <div class="col-md-8 data-view">
        <div class="container-fluid">
            <form method="post">
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="form-group col-4">
                        <label>Image:</label>
                    </div>
                    <div class="form-group col-8">
                        <label>Title:</label>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-4">
                        <label>Price:</label>
                    </div>
                    <div class="form-group col-8">
                        <label>Category:</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4"></div>
                    <div class="form-group col-8 float-">
                        <label>Decription:</label>
                    </div>
                </div>
                <div class="text-center" style="padding-top:15px;">
                    <button class="btn btn-primary">
                        <a class="text-dark" asp-area="" asp-page="/MyListings/Details">Details</a>
                    </button>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-4 order-1">
        <button class="btn btn-primary">
            <a class="text-dark" asp-area="" asp-page="/MyListings/Edit">Edit Selected Listing</a>
        </button>
        <p></p>
        <button class="btn btn-primary">
            <a class="text-dark" asp-area="" asp-page="/MyListings/Delete">Delete Selected Listing</a>
        </button>
        <p></p>
        
        <button class="btn btn-primary">
            <a class="text-dark" asp-area="" asp-page="/MyListings/Create">Create New Listing</a>
        </button>
    </div>
</div>
