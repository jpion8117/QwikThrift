@page "{id:int}"
@model QwikThrift.Pages.MyListings.EditModel
@{
    ViewBag.Title = $"Edit";
}

<h1>Edit Listing</h1>

<div class="row ">
    <div class="col-md-12 ">
        <form asp-action="Edit" class="text-white" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <div class="row">
                    
                    @for (int i = 0; i < Model.Item.Images.Count; i++)
                    {
                        <img class="col-sm-2 d-flex " src="@Model.Item.Images[i].FullPath" />
                        <br />
                    }
                    
                </div>
                
                <label asp-for="FormFiles" class="control-label">Upload Images:</label>
                <input asp-for="FormFiles" type="file" accept="image/*" multiple class="form-control" />
                <span asp-validation-for="Item.Images" class="text-danger"></span>
                
            </div>
            <div class="form-group">
                <label asp-for="Item.Title" class="control-label"></label>
                <input asp-for="Item.Title" class="form-control" value="@Model.Item.Title"/>
                <span asp-validation-for="Item.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Price" class="control-label"></label>
                <input asp-for="Item.Price" class="form-control" value="@Model.Item.Price" />
                <span asp-validation-for="Item.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label><br />
                <select asp-for="Category" asp-items="Model.Categories" class="col-md-12 p-2">
                    <option selected="selected" value="@Model.Item.Category.CategoryName">@Model.Item.Category.CategoryName</option>
                </select>
                <span asp-validation-for="Item.Category" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="Item.Description" class="control-label"></label>
                <textarea asp-for="Item.Description" class="form-control text-wrap" style="height:100px;"></textarea>
                <span asp-validation-for="Item.Description" class="text-danger"></span>
            </div>
            <div class="text-center">
                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-primary mt-2" />
                </div>
                <div class=" mt-1">
                    <a class="btn btn-primary" asp-page="/MyListings/Index">
                        Back to My Listings
                    </a>
                </div>
            </div>
        </form>
    </div>


</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
