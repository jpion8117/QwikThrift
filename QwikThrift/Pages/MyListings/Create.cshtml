@page
@model QwikThrift.Pages.MyListings.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Listing</h1>

<div class="row ">
    <div class="col-md-12 ">
        <form asp-page="/MyListings/Create" class="text-white" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Listing.Title" class="control-label"></label>
                <input asp-for="Listing.Title" class="form-control" required/>
                <span asp-validation-for="Listing.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Listing.Price" class="control-label"></label>
                <input asp-for="Listing.Price" class="form-control" required/>
                <span asp-validation-for="Listing.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label><br/>
                <select asp-for="Category" asp-items="Model.Categories" class="col-md-12 p-2" required></select>
                <span asp-validation-for="Listing.Category" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="Listing.Description" class="control-label"></label>
                <textarea asp-for="Listing.Description" class="form-control text-wrap" style="height:100px;" required></textarea>
                <span asp-validation-for="Listing.Description" class="text-danger"></span>
            </div>
            <div class="text-center">
                <div class="form-group">
                    <input type="reset" value="Reset" class="nav-link btn btn-primary text-white mt-2 mx-auto" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Next Step" class="nav-link btn btn-primary text-white mt-2  mx-auto" />
                </div>
                <div class=" mt-1">
                    <a class="btn btn-primary nav-link text-white  mx-auto" asp-page="/MyListings/Index">
                        Back to My Listings
                    </a>
                </div>
            </div>
        </form>
    </div>


</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function () { 
            $("#Listing_Title").focus();
        });

        $("#Listing_Price").on("focus", function () { 
            $("#Listing_Price").val('');
        });
    </script>
}
