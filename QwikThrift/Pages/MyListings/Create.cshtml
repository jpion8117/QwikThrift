@page
@model CreateModel
@{
    ViewData["Title"] = "Create New Listing";
}

<h1>Create New Listing</h1>

<div class="row " >
    <div class="col-md-6 data-view">
        <form method="post">
            @Html.AntiForgeryToken() 
            <div class="form-group">
                <label>Image:</label>
            </div>
            <div class="form-group">
                <label>Title:</label>
            </div>
            <div class="form-group">
                <label>Price:</label>
            </div>
            <div class="form-group">
                <label>Category:</label>
            </div>
            <div class="form-group">
                <label>Decription:</label>
            </div>
            <div style="text-align:center;">
            <button style="margin-left:auto;margin-right:auto;" type="reset" class="btn btn-primary text-white">Reset</button>
            <button type="submit" class="btn btn-primary text-white">Create Listing</button>
            </div>
        </form>

    </div>
    <div class="col-md-4 text-center">
        <a class="btn btn-primary" asp-page="/MyListings/Index">
            Back to My Listings
        </a>
    </div>
</div>
