@page
@model QwikThrift.Pages.MyListings.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Listing</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Listing.Title" class="control-label"></label>
                <input asp-for="Listing.Title" class="form-control" />
                <span asp-validation-for="Listing.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Listing.Description" class="control-label"></label>
                <input asp-for="Listing.Description" class="form-control" />
                <span asp-validation-for="Listing.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Listing.OwnerId" class="control-label"></label>
                <select asp-for="Listing.OwnerId" class ="form-control" asp-items="ViewBag.OwnerId"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Listing.SaleStatus" /> @Html.DisplayNameFor(model => model.Listing.SaleStatus)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Listing.Price" class="control-label"></label>
                <input asp-for="Listing.Price" class="form-control" />
                <span asp-validation-for="Listing.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Listing.CategoryId" class="control-label"></label>
                <select asp-for="Listing.CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Listing.ListingTime" class="control-label"></label>
                <input asp-for="Listing.ListingTime" class="form-control" />
                <span asp-validation-for="Listing.ListingTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
