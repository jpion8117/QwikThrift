@page "{id:int}"
@model DetailsModel
@{
    ViewData["Title"] = "Details";
}

<h1>Details:</h1>

<div class="row">
    <div class="col-md-6 data-view">
        <form method="post">
            @Html.AntiForgeryToken()

            <div class="form-group m-1">
                <label class="fw-bolder">Image:</label>
                <img src="@Model.Item.Images" alt="Item Image" />
            </div>
            <div class="form-group m-1">
                <label class="fw-bolder">Price:</label>
                <span>@Model.Item.Price.ToString("C")</span>
            </div>
            <div class="form-group m-1">
                <label class="fw-bolder">Title:</label>
                <span>@Model.Item.Title</span>
            </div>
            <div class="form-group m-1">
                <label class="fw-bolder">Category:</label>
                <span>@Model.Item.Category</span>
            </div>
            <div class="form-group m-1">
                <label class="fw-bolder">Description:</label>
                <br />
                <span>@Model.Item.Description</span>
            </div>
        </form>
    </div>
    <div class="col-md-4 order-1" style="text-align:left;padding:10px;">
        <button class="btn btn-primary">
            <a class="text-white" asp-area="" asp-page="/MyListings/Index">Back to My Listings</a>
        </button>
    </div>
</div>