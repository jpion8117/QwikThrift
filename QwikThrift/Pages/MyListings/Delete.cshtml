@page
@model QwikThrift.Pages.MyListings.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3 class="text-white">Are you sure you want to delete this?</h3>
<div class="text-white flex-column bg-dark pb-2 rounded-2">


    <dl class="row p-1 ">

        <div id="listinImages" class="carousel slide mt-2" data-ride="carousel">
            <ol class="carousel-indicators">
                @for (int i = 0; i < Model.Listing.Images.Count; i++)
                {
                    <li data-target="#listinImages" data-slide-to="@i" class="@(i==0 ? "active" : "")"></li>
                }
            </ol>
            <div class="carousel-inner">
                @for (int i = 0; i < Model.Listing.Images.Count; i++)
                {
                    <div class="carousel-item @(i==0 ? "active" : "")">
                        <img class="d-block mx-auto" src="@Model.Listing.Images[i].FullPath" alt="" style="height:350px">
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#listinImages" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            </a>
            <a class="carousel-control-next" href="#listinImages" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
            </a>
        </div>
        <div class="row">
            <dt class="col-sm-2 mt-4">
                @Html.DisplayNameFor(model => model.Listing.Title)
            </dt>
            <dd class="col-sm-10 mt-4">
                @Html.DisplayFor(model => model.Listing.Title)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Listing.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Listing.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Listing.Category)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Listing.Category.CategoryName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Listing.ListingTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Listing.ListingTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Listing.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Listing.Description)
            </dd>
        </div>
    </dl>
    
    <form method="post" class="text-center">
        <input type="hidden" asp-for="Listing.ListingId" />

         <input type="submit" value="Delete" class="btn btn-primary nav-link text-white text-center mx-auto" />
 

        <a class="btn btn-primary mt-2 nav-link text-white mx-auto" asp-page="/MyListings/Index">
            Back to My Listings
        </a>
    </form>

</div>
