@page "{id:int}"
@model CategoryDetailsModel
@{
    ViewData["Title"] = "Details";
}

<h1>Details:</h1>

<div class="row text-white">
    <div class="col-md-8 data-view">
        <form method="post">
            @Html.AntiForgeryToken()
            <div class="form-group m-1">
                <label class="fw-bolder">Price:</label>
                <span>@Model.Item.CategoryName</span>
            </div>
            <div class="form-group m-1">
                <label class="fw-bolder">Title:</label>
                <span>@Model.Item.CategoryDescription</span>
            </div>
            <div class="form-group m-1">
                <label class="fw-bolder">Category:</label>
                <span>@Model.Item.AuthorizedBy.Username</span>
            </div>
        </form>
    </div>

    <div class="col-md-4 text-center">
        <a class="btn btn-primary text-white" asp-page="/Category/Index">
            Go back to list
        </a>
    </div>
</div>