@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
<div class="col-md-8 data-view">
    <div class="container-fluid">
        <form method="post">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="form-group col-12">
                    <label>Image:</label>
                </div>

            </div>
            <div class="row">
                <div class="form-group col-12 fs-3">
                    <label>Title:</label>
                </div>
                <div class="form-group col-12">
                    <label>Price:</label>
                </div>

            </div>

           
        </form>
    </div>
</div>
<div class="col-md-4 order-1 text-center">
    <h1> Welcome to Qwik Thrift!</h1>
    <p class=" p-1 text-white text-center">Shop and save on local used goods in your area!</p>
</div>
</div>