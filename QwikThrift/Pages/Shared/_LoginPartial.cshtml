@inject QwikThrift.Models.DAL.QwikThriftDbContext dBContext
@inject IHttpContextAccessor contextAccessor
@{
    QwikThrift.Models.UserManager? userMan = null;
    if (contextAccessor != null && contextAccessor.HttpContext != null)
    {
        userMan = new QwikThrift.Models.UserManager(contextAccessor.HttpContext.Session);
    }
}

<ul class="navbar-nav">
@if (userMan != null ? userMan.UserLoggedIn : false)
{
    <li class="nav-item">Welcome @(userMan.User != null ? userMan.User.Username : "error")!</li>
    <li class="nav-item">
        <a asp-page="/Users/Logout" class="nav-link">Logout</a>
    </li>
}
else
{
    <li class="nav-item">
        <a asp-page="/Users/Login" class="nav-link">Login</a>
    </li>
}
</ul>